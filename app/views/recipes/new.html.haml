.col-md-6.col-md-offset-3
  .panel.panel-primary
    .panel-heading
      %h3.panel-title Create a New Recipe

    .panel-body
      = form_for @recipe do |f|
        .form-group
          = f.label "Name of the dish:"
          = f.text_field :title, class: "form-control", placeholder: "e.g. Greatest Pizza Ever"

        .form-group
          = f.label "Ingredients:"
          = f.text_area :ingredients, class: "form-control", rows: "4", placeholder: "Ingredients separated by semicolon, e.g. two eggs; grated cheese;"

        .form-group
          = f.label "Directions:"
          = f.text_area :directions, class: "form-control", rows: "8", placeholder: "Step by step instructions"

        .form-group
          Categories:
          .checkbox
            = collection_check_boxes(:recipe, :category_ids, Category.all, :id, :name) do |cb|
              - cb.label(class: "checkbox-inline") { cb.check_box(class: "checkbox") + cb.text }

        = f.submit "Create Recipe", class: "btn btn-default"
